<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/textViewNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Tempat"
            android:layout_below="@id/toolbar"
            android:layout_marginStart="12dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="32dp" />

        <EditText
            android:id="@+id/editTextNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Nama"
            android:layout_below="@+id/textViewNama"
            android:layout_alignStart="@+id/textViewNama"
            android:layout_marginTop="11dp" />

        <TextView
            android:id="@+id/textViewDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deskripsi"
            android:layout_below="@+id/editTextNama"
            android:layout_alignStart="@+id/editTextNama"
            android:layout_marginTop="20dip"/>

        <EditText
            android:id="@+id/editTextDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="11dp"
            android:hint="Deskripsi"
            android:inputType="textMultiLine"
            android:layout_below="@+id/textViewDesc"
            android:layout_alignStart="@+id/textViewDesc" />

        <TextView
            android:id="@+id/textViewKategori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kategori"
            android:layout_below="@+id/editTextDesc"
            android:layout_alignStart="@+id/editTextDesc"
            android:layout_marginTop="20dip"/>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="220dip"
            android:layout_height="30dip"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/textViewKategori"
            android:layout_alignStart="@+id/textViewKategori" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="86dp"
            android:background="@drawable/adddata"/>

        <Button
            android:id="@+id/btnImage"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_alignStart="@+id/spinner"
            android:layout_below="@+id/spinner"
            android:layout_marginTop="27dp"
            android:background="@drawable/addimage"/>


    </RelativeLayout>

</ScrollView>